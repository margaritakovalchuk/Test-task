mixin navBar(data)
    nav.header--nav
        ul.nav.d-flex.justify-content-around.flex-column.flex-md-row
            each item in data
                if(item.active)
                    li: span.active!= item.title
                else
                    li: a(href=item.url): span!= item.title

mixin footerList(data)
    ul.footer-list--items
        each item in data
            li: a(href=item.url)!= item.title

mixin iconSvg(name, path, url, width, height)
    - mod = mod || ''
    a(href=url target="_blank")
        svg(width=width height=height)
            use(xlink:href=path + ".svg#" + name)

mixin socialIconList(data)
    each item in data
        +iconSvg(item.name, "../../img/sprite", item.url, item.width, item.height)