                                            ".876v-1H9.563v1z" fill="#F61067")
                                    button(type="button").right
                                        svg.arrow-right-short(width="27" height="27" fill="none")
                                            circle(cx="13.5" cy="13.5" r="13" stroke="#F61067" stroke-opacity=".5")
                                            path(d="M17.791 13.854a.5.5 0 000-.708L14.61 9.964a.5.5 0 10-.707" +
                                            ".708L16.73 13.5l-2.828 2.828a.5.5 0 10.707.707l3.182-3.181zM9.562 14h7" +
                                            ".876v-1H9.563v1z" fill="#F61067")
                    .slider-control.left.inactive
                    .slider-control.right
        .subscribe.test
            .container
                form
                    .row
                        legend.col-md-12.text-center.p-md-0
                            p.subscribe--title Subscribe to our newsletter
                            p.subscribe--subtitle Cras pulvinar mattis nunc sed blandit.
                        .col-xl-6.m-auto.col-lg-8
                            .form-inline.subscribe-form
                                label.sr-only(for="email") Enter your email
                                .input-group.w-100
                                    input#email.flex-grow-1(type="email" placeholder="Enter email")
                                    .input-group-append
                                        button.button-subscribe(type="submit")
                                            span Subscribe
                                            svg.arrow-right-short(width="27" height="27" fill="none")
                                                circle(cx="13.5" cy="13.5" r="13" stroke="#F61067" stroke-opacity=".5")
